{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Wokwi GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.pio/build/esp32dev/firmware.elf",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Users/YOURUSERNAME/.platformio/packages/toolchain-xtensa-esp32/bin/xtensa-esp32-elf-gdb.exe", // path to gdb
            "miDebuggerServerAddress": "localhost:3333"
        }, ... // other launch options